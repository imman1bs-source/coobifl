# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/amazon_product_hub

# Redis Configuration (Optional - for caching in Phase 6)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Amazon Product Advertising API (Phase 4)
# Sign up at: https://affiliate-program.amazon.com/
# Apply for API access at: https://webservices.amazon.com/paapi5/documentation/
AMAZON_ACCESS_KEY=your_access_key_here
AMAZON_SECRET_KEY=your_secret_key_here
AMAZON_PARTNER_TAG=your_partner_tag_here
AMAZON_REGION=us-east-1
AMAZON_MARKETPLACE=www.amazon.com

# Auto Sync Configuration
ENABLE_AUTO_SYNC=false  # Set to true to enable scheduled syncs

# JWT Configuration
JWT_SECRET=your-very-secret-jwt-key-change-in-production
JWT_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=36
MAX_PAGE_SIZE=100

# CORS
FRONTEND_URL=http://localhost:3000
