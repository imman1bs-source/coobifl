<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .search-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .product-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 1rem;
            margin-bottom: 2rem;
        }
        @media (max-width: 1200px) {
            .product-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }
        @media (max-width: 900px) {
            .product-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        @media (max-width: 480px) {
            .product-grid {
                grid-template-columns: 1fr;
            }
        }
        /* COO Badge Styles */
        .product-card {
            position: relative;
        }
        .coo-badge-container {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 10;
        }
        .coo-badge {
            display: inline-block;
            background: rgba(102, 126, 234, 0.95);
            color: white;
            padding: 0.35rem 0.7rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
        }
        .coo-badge:hover {
            background: rgba(102, 126, 234, 1);
        }
        /* Product Brand and Title Styles */
        .product-brand {
            font-size: 0.75rem;
            color: #666;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }
        .product-title {
            font-size: 0.9rem;
            line-height: 1.3;
            height: 3.9rem;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            margin-bottom: 0.75rem;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <main>
        <!-- Search Header -->
        <section class="search-header">
            <div class="container">
                <div class="d-flex align-items-center mb-3">
                    <a href="/" class="btn btn-light d-flex align-items-center gap-2" style="background: white;">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to Home</span>
                    </a>
                </div>
                <form action="/search" method="GET" class="search-form">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input
                            type="text"
                            class="form-control border-start-0"
                            name="q"
                            value="<%= query || '' %>"
                            placeholder="Search for products..."
                            autocomplete="off"
                        >
                        <button class="btn btn-primary px-4" type="submit">
                            Search
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Results Section -->
        <section class="container" style="max-width: 1400px;">
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                <h5 class="mb-0">
                    <% if (query) { %>
                        <span id="result-count">0</span> results for "<%= query %>"
                    <% } else { %>
                        All Products (<span id="result-count">0</span>)
                    <% } %>
                </h5>
                <div class="d-flex gap-2">
                    <select class="form-select" id="country-filter" style="min-width: 180px;">
                        <option value="">All Countries</option>
                        <option value="China">China</option>
                        <option value="Switzerland">Switzerland</option>
                        <option value="USA">USA</option>
                        <option value="Germany">Germany</option>
                        <option value="India">India</option>
                        <option value="Japan">Japan</option>
                    </select>
                    <select class="form-select" id="sort-select" style="min-width: 180px;">
                        <option value="relevance">Sort by: Relevance</option>
                        <option value="price-low">Price: Low to High</option>
                        <option value="price-high">Price: High to Low</option>
                        <option value="rating">Highest Rated</option>
                    </select>
                </div>
            </div>

            <!-- Loading Spinner -->
            <div id="loading" class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Loading products...</p>
            </div>

            <!-- Product Grid -->
            <div id="product-grid" class="product-grid" style="display: none;"></div>

            <!-- No Results -->
            <div id="no-results" class="text-center py-5" style="display: none;">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4>No products found</h4>
                <p class="text-muted">Try adjusting your search terms</p>
            </div>

            <!-- Pagination -->
            <nav id="pagination" class="mt-4" style="display: none;">
                <ul class="pagination justify-content-center"></ul>
            </nav>
        </section>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        const API_BASE_URL = '<%= API_BASE_URL %>';
        const searchQuery = '<%= query || "" %>';
        const currentPage = parseInt('<%= page || "1" %>');
        let selectedCountry = '';

        // Fetch and display products
        async function loadProducts(page = 1) {
            try {
                document.getElementById('loading').style.display = 'block';
                document.getElementById('product-grid').style.display = 'none';
                document.getElementById('no-results').style.display = 'none';

                let url;
                if (searchQuery) {
                    url = `${API_BASE_URL}/products/search?q=${encodeURIComponent(searchQuery)}&page=${page}&limit=36`;
                } else {
                    url = `${API_BASE_URL}/products?page=${page}&limit=36`;
                }

                // Add country filter if selected
                if (selectedCountry) {
                    url += `&country=${encodeURIComponent(selectedCountry)}`;
                }

                const response = await axios.get(url);
                const { data, pagination } = response.data;

                document.getElementById('loading').style.display = 'none';

                if (data.length === 0) {
                    document.getElementById('no-results').style.display = 'block';
                    return;
                }

                displayProducts(data);
                updatePagination(pagination);
                document.getElementById('result-count').textContent = pagination.total;

            } catch (error) {
                console.error('Error loading products:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('no-results').style.display = 'block';
            }
        }

        // Display products in grid
        function displayProducts(products) {
            const grid = document.getElementById('product-grid');
            grid.innerHTML = '';
            grid.style.display = 'grid';

            products.forEach(product => {
                const productCard = createProductCard(product);
                grid.innerHTML += productCard;
            });
        }

        // Create product card HTML
        function createProductCard(product) {
            const price = product.price?.displayPrice || `$${product.price?.amount || 0}`;
            const rating = product.rating?.average || 0;
            const reviewCount = product.rating?.count || 0;

            // Use local image for Amazon products, Walmart images from API
            let image;
            if (product.origin?.source === 'amazon_pa_api' || (product.asin && product.asin.startsWith('B'))) {
                // Amazon product - use local image
                image = `/images/products/${product.asin}.jpg`;
            } else {
                // Walmart or other - use API image
                image = product.images?.primary || 'https://via.placeholder.com/200x200?text=No+Image';
            }

            // Get country of origin from specifications
            const specs = product.specifications || {};
            const countryOfOrigin = specs['Country of Origin'] || specs.countryOfOrigin || '';

            // Extract brand and title
            const brand = product.brand || '';
            const title = product.title || '';

            // Generate COO badge HTML
            let cooBadgeHTML = '';
            if (countryOfOrigin) {
                cooBadgeHTML = `<span class="coo-badge" title="Country of Origin: ${countryOfOrigin}">COO: ${countryOfOrigin}</span>`;
            }

            return `
                <div class="card product-card h-100">
                    <a href="/products/${product._id}" class="text-decoration-none text-dark">
                        ${cooBadgeHTML ? `<div class="coo-badge-container">${cooBadgeHTML}</div>` : ''}
                        <img src="${image}" class="card-img-top" alt="${title}" onerror="this.src='https://via.placeholder.com/200x200?text=No+Image'">
                        <div class="card-body d-flex flex-column">
                            ${brand ? `<div class="product-brand">${brand}</div>` : ''}
                            <h6 class="product-title">${title}</h6>
                            <div class="mt-auto">
                                <p class="product-price mb-1">${price}</p>
                                <div class="rating-stars">
                                    ${generateStars(rating)} <span class="text-muted small">${rating.toFixed(1)}</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            `;
        }

        // Generate star rating HTML
        function generateStars(rating) {
            const fullStars = Math.floor(rating);
            const hasHalfStar = rating % 1 >= 0.5;
            const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);

            let html = '';
            for (let i = 0; i < fullStars; i++) {
                html += '<i class="fas fa-star"></i>';
            }
            if (hasHalfStar) {
                html += '<i class="fas fa-star-half-alt"></i>';
            }
            for (let i = 0; i < emptyStars; i++) {
                html += '<i class="far fa-star"></i>';
            }
            return html;
        }

        // Update pagination
        function updatePagination(pagination) {
            const paginationEl = document.getElementById('pagination');
            const paginationList = paginationEl.querySelector('.pagination');

            if (pagination.pages <= 1) {
                paginationEl.style.display = 'none';
                return;
            }

            paginationEl.style.display = 'block';
            paginationList.innerHTML = '';

            // Previous button
            const prevDisabled = pagination.page === 1 ? 'disabled' : '';
            paginationList.innerHTML += `
                <li class="page-item ${prevDisabled}">
                    <a class="page-link" href="?q=${searchQuery}&page=${pagination.page - 1}">Previous</a>
                </li>
            `;

            // Page numbers
            for (let i = 1; i <= pagination.pages; i++) {
                const active = i === pagination.page ? 'active' : '';
                paginationList.innerHTML += `
                    <li class="page-item ${active}">
                        <a class="page-link" href="?q=${searchQuery}&page=${i}">${i}</a>
                    </li>
                `;
            }

            // Next button
            const nextDisabled = pagination.page === pagination.pages ? 'disabled' : '';
            paginationList.innerHTML += `
                <li class="page-item ${nextDisabled}">
                    <a class="page-link" href="?q=${searchQuery}&page=${pagination.page + 1}">Next</a>
                </li>
            `;
        }

        // Country filter change handler
        document.addEventListener('DOMContentLoaded', () => {
            const countryFilter = document.getElementById('country-filter');

            countryFilter.addEventListener('change', (e) => {
                selectedCountry = e.target.value;
                loadProducts(1); // Reset to page 1 when filter changes
            });

            loadProducts(currentPage);
        });
    </script>
</body>
</html>
